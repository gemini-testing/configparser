{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["lib", "types"],
  "exclude": ["build", "test"],
  "compilerOptions": {
    "outDir": "build",
    "types": ["node"],
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
